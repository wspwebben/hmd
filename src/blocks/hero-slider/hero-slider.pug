mixin hero-slider(slides)

  .hero-slider&attributes(attributes)
    each slide in slides
      img.hero-slider__image(src= slide.image, role='presentation', alt='')
    .hero-slider__inner
      each slide in slides
        h2.hero-slider__title= slide.title
        p.hero-slider__text= slide.text

        +button('Learn More', 'full').hero-slider__button

        .hero-slider__controls
          button.hero-slider__control.hero-slider__control--prev
            +arrow().hero-slider__arrow
          button.hero-slider__control.hero-slider__control--next
            +arrow().hero-slider__arrow