mixin breadcrumbs()
  -
    const currentPage = pages[page];
    const pagesWithoutBreadcrumbs = ['index'];

  if (!pagesWithoutBreadcrumbs.includes(page))  
    nav.breadcrumbs(class=allMods)&attributes(attributes)
      .breadcrumbs__inner  
        ul.breadcrumbs__list
          li.breadcrumbs__item
            a.breadcrumbs__link.breadcrumbs__link--icon(href="/")
              svg.breadcrubs__icon(width="18" height="18")
                use(xlink:href="img/sprite.svg#home")
              span.breadcrumbs__caption Home
          if currentPage
            li.breadcrumbs__point
              span.breadcrumbs__caption= currentPage.text
