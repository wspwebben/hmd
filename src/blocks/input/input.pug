mixin input(classname, label, mods)
  -
    const element = 'input';
    const modList = mods ? mods.split(' ') : [];
    const allMods = modList.map(mod => `${element}--${mod}`).join(' ');

  label.input(class=`${allMods} ${classname}`)
    if label
      span.input__label= label
    input.input__field&attributes(attributes)
    span.input__marker
