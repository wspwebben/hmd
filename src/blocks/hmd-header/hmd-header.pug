mixin hmd-header(mods)
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' hmd-header--' + modsList[i].trim();
      }
    }

  header.hmd-header(class=allMods)&attributes(attributes)
    .hmd-header__inner
      +logo().hmd-header__logo
      +main-nav(page).hmd-header__menu
      
