      const advantageText = `
        Far curiosity incommode now led smallness allowance. Favour bed assure son things yet.
        She consisted consulted elsewhere happiness disposing household any old the.
      `;
      const advantages = new Array(advantageCount).fill({
        title: advantageTitle,
        text: advantageText,
      });

    +list(advantages).page__element