extends ../pug/layout.pug

block vars
  - let page = 'portfolio'

block meta
  title Our Portfolio
  meta(name='description', content='')

block content
  .page__inner
    - const tabsCaption = ['All', 'Section 1', 'Section 2', 'Section 3']
    - const activeTab = 'All'
    - const tabs = tabsCaption.map(tab => ({ caption: tab, isActive: tab === activeTab }));
    
    +tabs(tabs).page__element

    -
      const cardsCount = 6;
      const cardsImages = ['card1.jpg', 'card2.jpg', 'card3.jpg'];
      const cards = new Array(cardsCount).fill().map((_, i) => ({
        caption: `Project ${i + 1}`,
        image: cardsImages[i % cardsImages.length]
      }));
    
    +grid(cards, 'card', true, 'narrow').page__element.page__element--spacer

    +contact().page__element